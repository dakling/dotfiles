#!/bin/bash

sudo ln -s $(pwd)/binCustom/changeVolume.py /usr/bin/
sudo ln -s $(pwd)/binCustom/fdy_connect /usr/bin/
sudo ln -s $(pwd)/binCustom/fix_touchscreen /usr/bin/
sudo ln -s $(pwd)/binCustom/monitor_home /usr/bin/
sudo ln -s $(pwd)/binCustom/nvim-termite /usr/bin/
sudo ln -s $(pwd)/binCustom/rangerStandalone /usr/bin/
sudo ln -s $(pwd)/binCustom/swayCustomSettings /usr/bin/


sudo ln -s $(pwd)/binCustom/nvim-termite.desktop /usr/share/applications/
sudo ln -s $(pwd)/binCustom/rangerStandalone /usr/share/applications/

mkdir -p ~/.config/i3/
mkdir -p ~/.config/i3status
mkdir -p ~/.config/nvim
mkdir -p ~/.config/ranger
mkdir -p ~/.config/qutebrowser
mkdir -p ~/.config/sway

ln -s $(pwd)/i3/config ~/.config/i3/
ln -s $(pwd)/i3status/config ~/.config/i3status/
ln -s $(pwd)/nvim/init.vim ~/.config/i3/nvim
ln -s $(pwd)/ranger/* ~/.config/ranger/
ln -s $(pwd)/qutebrowser/* ~/.config/qutebrowser/
ln -s $(pwd)/sway/config ~/.config/sway/
ln -s $(pwd)/zshrc ~/.zshrc
