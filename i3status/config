tztime local {
         #format = "%Y-%m-%d %H:%M:%S"
        format = " %d.%m. %H:%M "
}

dropboxd_status {
    format = "  {status} "
    status_on = "✓"
    status_off = "isn't running"
    status_busy = "busy"
    color_good = "#00ff00"
}

