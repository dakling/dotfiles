#
# wm independent hotkeys
#

# terminal emulator
super + Return
	default-terminal

super + r
    rofi -show combi
super + shift + Return
	open-terminal-here
# make sxhkd reload its configuration files:
super + shift + r
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

#minimize
#super + -
    #whid hide

#super + shift + -
    #whid last
# close and kill
super + {_,shift + }c
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

# if the current node is automatic, send it to the last manual, otherwise pull the last leaf
super + y
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

# swap the current node and the biggest node
super + g
	bspc node -s biggest.local
super + shift + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags !!! US layout assumed
super + ctrl + {x,y,z} 
	bspc node -g {locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the node for the given path jump
super + {a,b,comma,period}
	bspc node -f @{parent,brother,first,second}

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {1-9,0}
	bspc desktop -f '^{1-9,10}'

#super + shift + {1-9,0}
	#bspc node -d '^{1-9,10}' ; bspc desktop -f '^{1-9,10}'
super + shift + 1
	bspc node -d '^1' ; bspc desktop -f '^1'
super + shift + 2
	bspc node -d '^2' ; bspc desktop -f '^2'
super + shift + 3
	bspc node -d '^3' ; bspc desktop -f '^3'
super + shift + 4
	bspc node -d '^4' ; bspc desktop -f '^4'
super + shift + 5
	bspc node -d '^5' ; bspc desktop -f '^5'
super + shift + 6
	bspc node -d '^6' ; bspc desktop -f '^6'
super + shift + 7
	bspc node -d '^7' ; bspc desktop -f '^7'
super + shift + 8
	bspc node -d '^8' ; bspc desktop -f '^8'
super + shift + 9
	bspc node -d '^9' ; bspc desktop -f '^9'
super + shift + 0
	bspc node -d '^10' ; bspc desktop -f '^10'
#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspwm_resize.sh {west,south,north,east}
#super + alt + {h,j,k,l}
	#bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
#super + alt + shift + {h,j,k,l}
	#bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

# In case bspwmrc fails to execute/you wish have plugged in a new monitor
super + ctrl + r
    killall plasmashell ; source ~/.config/bspwm/bspwmrc ; kstart plasmashell
#start applications
super + F1
	nvim-qt
super + F2
	qutebrowser --backend webengine
super + F3
	default-terminal -e ranger
super + F4
	default-terminal -e mutt
super + F5
	default-terminal -e pacui
#start programs
super + x ; i 
    firefox-nightly
super + x ; d
    dolphin
super + x ; e 
    kmail
super + x ; s 
    systemsettings5
super + x ; p 
    pamac-manager
#edit files
super + shift + x ; s
    default-terminal -e nvim ~/.config/sxhkd/sxhkdrc
super + shift + x ; b
    default-terminal -e nvim ~/.config/bspwm/bspwmrc
super + shift + x ; v
    default-terminal -e nvim ~/.config/nvim/init.vim
super + shift + x ; q
    default-terminal -e nvim ~/.config/qutebrowser/qutebrowser.conf
super + shift + x ; e
    default-terminal -e python ~/Dropbox/Helen/einkaufsliste/interactiveEnterDario.py
super + shift + x ; z
    default-terminal -e nvim ~/.zshrc
# leave
super + w ; s
    shutdown now
super + w ; r
    reboot now
super + w ; l
    /usr/lib/kscreenlocker_greet --immediateLock --graceTime 5000
super + w ; e
    qdbus org.kde.ksmserver /KSMServer logout 0 3 3
